<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#0066FF"
                android:centerColor="#0092E4"
                android:endColor="#00C2FF"
 />
            <corners android:radius="10dp" />
            <padding
                android:bottom="1.7dp"
                android:left="1.7dp"
                android:right="1.7dp"
                android:top="1.7dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="10dp" />
            <size
                android:width="200dp"
                android:height="100dp" />
        </shape>
    </item>
</layer-list>
