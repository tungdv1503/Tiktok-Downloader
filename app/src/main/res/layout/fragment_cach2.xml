<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbarStyle="outsideOverlay"
    tools:context=".Fragment.Cach1Framgnet">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            app:cardCornerRadius="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/txtlabel_cach2"
                            android:layout_marginTop="16dp"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:text="@string/nameCach2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:fontFamily="@font/opensans_medium"
                            android:textSize="13dp"
                            android:layout_marginRight="8dp"
                            android:gravity="center"
                            android:text="1"
                            style="@style/textViewhelps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:fontFamily="@font/opensans_medium"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:text="@string/buoc1_cach1"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="0dp"
                            android:src="@drawable/image1" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="1dp"
                            android:src="@drawable/image5" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignBottom="@+id/img1"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="136dp"
                            android:layout_marginTop="142dp"
                            android:layout_marginBottom="42dp"
                            android:src="@drawable/icon_share_" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:fontFamily="@font/opensans_medium"
                            android:textSize="13dp"
                            android:layout_marginRight="8dp"
                            android:gravity="center"
                            android:text="2"
                            style="@style/textViewhelps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="15dp"
                            android:fontFamily="@font/opensans_medium"
                            android:textColor="@color/black"
                            android:text="@string/buoc2_cach2"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="0dp"
                            android:src="@drawable/image4" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="0dp"
                            android:src="@drawable/image5" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignBottom="@+id/img2"

                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="129dp"
                            android:layout_marginTop="143dp"
                            android:layout_marginBottom="50dp"
                            android:src="@drawable/icon_khac" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginBottom="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="13dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:text="3"
                            android:fontFamily="@font/opensans_medium"
                            style="@style/textViewhelps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:fontFamily="@font/opensans_medium"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:text="@string/buoc2_cach2"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="0dp"
                            android:src="@drawable/image4" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="0dp"
                            android:src="@drawable/image5" />
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="16dp"

                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="135dp"
                            android:layout_marginTop="145dp"

                            android:layout_width="32dp"
                            android:layout_height="32dp">
                            <androidx.cardview.widget.CardView
                                android:layout_gravity="center"
                                android:layout_margin="1dp"
                                app:cardCornerRadius="14dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    app:cardCornerRadius="18dp"
                                    android:background="@color/black"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:padding="2dp"
                                        android:layout_gravity="center"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:background="@color/black"
                                        android:src="@drawable/icon_download_" />


                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/btn_DaHieu"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="22dp"
            android:layout_gravity="center"
            style="@style/btnDaHieu"
            android:text="@string/DaHieu"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</ScrollView>